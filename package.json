{
  "name": "next-template-mdx-shad",
  "version": "0.1.9",
  "private": true,
  "author": "NaNomicon",
  "scripts": {
    "dev": "node scripts/startup-info.js && next dev -p 3001",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "node scripts/startup-info.js && next start -p 3001",
    "lint": "next lint",
    "version:show": "node scripts/startup-info.js",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "new-blog": "node scripts/new-blog.js",
    "verify-analytics": "node scripts/verify-analytics.js",
    "docker:build": "bash scripts/docker-build.sh",
    "docker:run": "docker run --rm -p 3001:3001 registry.services.nandev.net/nan/blog-mdx:latest",
    "docker:push": "docker push registry.services.nandev.net/nan/blog-mdx:latest",
    "docker:deploy": "pnpm docker:build && pnpm docker:push",
    "devcontainer:build": "docker build -f .devcontainer/Dockerfile -t blog-mdx-devcontainer --build-arg GIT_USER_NAME=\"$(git config user.name 2>/dev/null || echo '')\" --build-arg GIT_USER_EMAIL=\"$(git config user.email 2>/dev/null || echo '')\" --build-arg GIT_SIGNING_KEY=\"$(git config user.signingkey 2>/dev/null || echo '')\" --build-arg GIT_SIGN_COMMITS=\"$(git config commit.gpgsign 2>/dev/null || echo 'false')\" --build-arg GIT_REPO_URL=\"$(git config --get remote.origin.url | sed 's/git@github.com:/https:\\/\\/github.com\\//')\" .",
    "devcontainer:start": "docker run -d --name blog-mdx-dev -p 3002:3001 -p 3003:3000 -v blog-mdx-workspace:/workspace blog-mdx-devcontainer",
    "devcontainer:stop": "docker stop blog-mdx-dev && docker rm blog-mdx-dev",
    "devcontainer:shell": "docker exec -it blog-mdx-dev bash",
    "devcontainer:logs": "docker logs -f blog-mdx-dev",
    "approve-builds": "pnpm approve-builds",
    "postinstall": "pnpm config set ignore-scripts false || true"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@icons-pack/react-simple-icons": "^12.9.0",
    "@mdx-js/loader": "^3.0.1",
    "@next/mdx": "^14.2.5",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "grammy": "^1.36.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "10.7.2",
    "lucide-react": "^0.408.0",
    "next": "14.2.5",
    "next-themes": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^9.0.1",
    "react-powerplug": "^1.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "sonner": "^2.0.6",
    "styled-components": "^6.1.12",
    "tailwind-highlightjs": "^2.0.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.0-canary.51",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  }
}
